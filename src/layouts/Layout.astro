---
export interface Props {
	title: string;
}

import "../styles/global.css"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="bg-slate-200 font-sans">
		<nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 mb-10 sticky top-0 z-10 h-[75px]">
			<div class="flex flex-wrap items-center justify-between mx-auto h-full max-w-[1440px]">
			  <a href="/" class="flex items-center">
				<h2 class="style-headline-5">Tom's Astro Photography Blog</h2>
			  </a>
			  <div class="hidden w-full md:block md:w-auto" id="navbar-default">
		</nav>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		background-color: #F6F6F6;
	}
</style>
